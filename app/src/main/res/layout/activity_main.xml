<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#FFF"
>




    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_schedule_black_24dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALAH TIME"
            android:fontFamily="@font/libre_franklin_thin"
            android:textStyle="bold"
            android:textColor="#232323"
            android:layout_below="@id/imageView"
            android:textSize="50sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/salahTimeTv"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="DATE"
            android:layout_centerInParent="true"
            android:layout_below="@id/salahTimeTv"
            android:fontFamily="@font/libre_franklin_thin"
            android:id="@+id/dateTv"
            android:textStyle="bold"
            android:textColor="#867d7d"
            android:textSize="27sp"
    />

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/noConnection"
            android:src="@drawable/no_connection"
            android:layout_centerInParent="true"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noConnectionTv"
            android:layout_below="@id/noConnection"
            android:layout_centerInParent="true"
            android:text="NO CONNECTION, TAP AGAIN TO RELOAD"
            android:layout_marginTop="5dp"
    />




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:id="@+id/linearLayout"
            android:layout_below="@id/dateTv"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/gradient"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fajr"
                    android:layout_gravity="end"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:textStyle="bold"
                    android:textColor="#867d7d"
                    android:textSize="28sp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunrise"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:textStyle="bold"
                    android:textColor="#867d7d"
                    android:textSize="28sp"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhuhr"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:textStyle="bold"
                    android:textColor="#867d7d"
                    android:textSize="23sp"


            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asr"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:textStyle="bold"
                    android:textColor="#867d7d"
                    android:textSize="28sp"


            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Magrib"
                    android:layout_gravity="end"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#867d7d"
                    android:textSize="28sp"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isha"
                    android:layout_gravity="end"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="#867d7d"
                    android:textSize="28sp"

            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fajrTime"
                    tools:text="Fajr"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:textStyle="bold"
                    android:textColor="#2e8bf9"
                    android:textSize="30sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sunriseTime"
                    tools:text="Sunrise"
                    android:fontFamily="@font/libre_franklin_thin"


                    android:textStyle="bold"
                    android:textColor="#2e8bf9"
                    android:textSize="30sp"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dhuhrTime"
                    tools:text="Dhuhr"
                    android:fontFamily="@font/libre_franklin_thin"

                    android:textStyle="bold"
                    android:textColor="#2e8bf9"
                    android:textSize="30sp"

            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/asrTime"
                    tools:text="Asr"
                    android:fontFamily="@font/libre_franklin_thin"

                    android:textStyle="bold"
                    android:textColor="#2e8bf9"
                    android:textSize="30sp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/magribTime"
                    tools:text="Magrib"
                    android:fontFamily="@font/libre_franklin_thin"

                    android:textStyle="bold"
                    android:textColor="#2e8bf9"
                    android:textSize="30sp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ishaTime"
                    tools:text="Isha"
                    android:fontFamily="@font/libre_franklin_thin"
                    android:textStyle="bold"
                    android:textColor="#2e8bf9"
                    android:textSize="30sp"
            />

        </LinearLayout>

    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KARACHI,PK"
            android:layout_centerInParent="true"
            android:layout_below="@id/linearLayout"
            android:fontFamily="@font/libre_franklin_thin"
            android:id="@+id/locationTv"
            android:textStyle="bold"
            android:textColor="#867d7d"
            android:layout_marginTop="10dp"
            android:textSize="27sp"
    />

</RelativeLayout>